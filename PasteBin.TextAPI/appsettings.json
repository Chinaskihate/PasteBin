{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "TextApiSettings": {
        "DbSettings": {
            "ConnectionString": "{db_connection}"
        },
        "MaxTopicTextLength": 1000,
        "Minio": {
            "Endpoint": "{minio_endpoint}",
            "AccessKey": "{minio_access_key}",
            "SecretKey": "{minio_secret_key}",
            "Region": "{minio_region}"
        },
        "Redis": {
            "ConnectionString": "{redis_connection}"
        },
        "UrlSetName": "short-urls",
        "TextBucketName": "topic-content"
    }
}
